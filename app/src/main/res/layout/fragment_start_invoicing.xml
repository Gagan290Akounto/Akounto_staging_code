<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color">

        <LinearLayout
            android:id="@+id/liSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <include layout="@layout/include_stepper_dashboard" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/liSteps"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_steps"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Congratulations! You have successfully set-up your profile!"
                android:textColor="@color/heading_color"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/start_invoice" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/action_primary_btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Set Invo nice Template"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/primary_light_button"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Create first invoice"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Go to dashboard"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>