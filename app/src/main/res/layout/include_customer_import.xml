<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Customer Import"
            android:textColor="@color/heading_color"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Import your customer’s data in 3 easy steps."
            android:textColor="#757D8A"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:src="@drawable/add_new_cx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Can’t import in app open desktop"
            android:textColor="@color/heading_color"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:lineHeight="24dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut hendrerit tincidunt quis tristique vestibulum vel. Id vulputate tortor felis convallis. Sociis volutpat tempor sagittis eu quis. Egestas et orci."
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Copy Link"
            android:textColor="@color/heading_color"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_purple_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="https://akounto.com/customer/import"
            android:textColor="@color/heading_color"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/action_primary_btn"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Copy Link"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Go back"
            android:textAllCaps="false"
            android:textColor="@color/primary_color"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>