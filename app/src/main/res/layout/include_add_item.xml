<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Add Items"
                android:textColor="@color/heading_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Tell us about your product offerings and weâ€™ll make sure all your books are managed easily."
                android:textColor="#757D8A"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Item/Service Name"
                android:textColor="@color/heading_color"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg_grey"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter item name"
                android:textColor="#333333"
                android:textColorHint="#9C9C9C"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_bg_grey"
                android:fontFamily="@font/poppins_regular"
                android:hint="Item description. Max 2 line"
                android:textColor="#333333"
                android:textColorHint="#9C9C9C"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_bg_grey"
                android:fontFamily="@font/poppins_regular"
                android:hint="$ 0.00"
                android:textColor="#333333"
                android:textColorHint="#9C9C9C"
                android:textSize="16sp" />
            <!--spinner-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_bg_grey"
                android:fontFamily="@font/poppins_regular"
                android:hint="Select Tax"
                android:textColor="#333333"
                android:textColorHint="#9C9C9C"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Additional_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Additional taxes"
                    android:textColor="@color/primary_color"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/tv_Additional_tax"
                    android:src="@drawable/ic_add_tax_circle" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/primary_disable_btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/save_services"
                android:textAllCaps="false"
                android:textColor="#9c9c9c"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/primary_disable_btn2"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/save_add_new_services"
                android:textAllCaps="false"
                android:textColor="#9c9c9c"
                android:textSize="16sp" />
            <!--active buttons-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/action_primary_btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/save_services"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/primary_light_button"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/save_add_new_services"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>